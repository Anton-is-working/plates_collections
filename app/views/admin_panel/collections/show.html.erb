<h1 class="my-4"><%= @collection.title %></h1>

<p><%= @collection.description %></p>
<p><strong>Status:</strong> <%= @collection.publish ? 'Published' : 'Not Published' %></p>

<% if @collection.images.attached? %>
  <div class="row">
    <% @collection.images.each do |image| %>
      <div class="col-md-4">
        <%= image_tag url_for(image), class: 'img-fluid mb-3' %>
      </div>
    <% end %>
  </div>
<% end %>

<%= link_to 'Edit', edit_admin_panel_collection_path(@collection), class: 'btn btn-warning' %> |
<%= link_to 'Back', admin_panel_collections_path, class: 'btn btn-secondary' %>

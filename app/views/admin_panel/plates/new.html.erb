<div class="container mt-4">
  <h2><%= action_name.capitalize %> Plate</h2>

  <%= form_with(model: [:admin_panel, @plate], local: true, class: "needs-validation") do |form| %>
    <% if @plate.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h4><%= pluralize(@plate.errors.count, "error") %> prohibited this plate from being saved:</h4>
        <ul>
          <% @plate.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :order, class: 'form-label' %>
      <%= form.number_field :order, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :collection_id, 'Collection', class: 'form-label' %>
      <%= form.collection_select :collection_id, Collection.all, :id, :title, { prompt: 'Select Collection' }, class: 'form-select' %>
    </div>

    <div class="mb-3">
      <%= form.label :image, class: 'form-label' %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.submit nil, class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= link_to 'Back', admin_panel_plates_path, class: 'btn btn-secondary' %>
</div>
